def crawler(match_rating, start_node=root, *args)
  # use *args to create array of conditions
  start_rating = start_node.rating
  if start_rating == match_rating
    args[0]
  elsif start_rating < match_rating && start_node.higher_link.nil?
    args[1]
  elsif start_rating > match_rating && start_node.lower_link.nil?
    args[2]
  elsif start_rating < match_rating
    args[3]
  elsif start_rating > match_rating
    args[4]
  end
end

def find_parent(start_node=root)
  new_rating = nodes[-1].rating
  crawler_returns = ["",
                     start_node,
                     start_node,
                     find_parent(grab_node(start_node.higher_link)),
                     find_parent(grab_node(start_node.lower_link))
                     ]
  crawler(new_rating, start_node, crawler_returns)
